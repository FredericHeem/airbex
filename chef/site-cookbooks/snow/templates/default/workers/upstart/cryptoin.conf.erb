start on startup
console log
env NAME=<%= @service %>
env NODE_ENV=<%= node.chef_environment %>
env DEBUG=*
env HOME=/home/ubuntu
chdir <%= @workerDir %>/current/workers

script
    echo $$ > /var/run/$NAME.pid
    sudo -Eu ubuntu node bin/cryptoin.js
end script

post-stop script
   rm -f /var/run/$NAME.pid
end script
