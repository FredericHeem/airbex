{
    "session": {
        "type": "redis",
        "uri": "redis://<%= @redis_ip %>/snow"
    },
    "website_url": "<%= @website_url %>",

    "pg_write_url": {
		"user":"postgres",
		"host": "<%= @pgm_ip %>",
		"database" :"snow",
		"ssl": false,
		"password" : "<%= node[:pg_write_url][:password] %>"
    },
    "pg_read_url": {
		"user":"postgres",
		"host": "<%= @pgs_ip %>",
		"database" :"snow",
		"ssl": false,
		"password" : "<%= node[:pg_read_url][:password] %>"
    },

    "port": <%= node[:snow][:api][:port] %>,
    <% unless @ripple['federation'].nil? %>
    "ripple_federation": <%= @ripple['federation'].to_json %>,
    <% end %>
    "ripple_account": "<%= @ripple['account'] %>",
    <% unless @intercom.nil? %>
    "intercom_app_id": "<%= @intercom['app_id'] %>",
    "intercom_secret": "<%= @intercom['secret'] %>",
    "intercom_key": "<%= @intercom['key'] %>",
    "segment_secret": "<%= @segment['api_secret'] %>",
    <% end %>
    <% unless @bde.nil? %>
    "bde_api_key": "<%= @bde %>",
    <% end %>
    <% unless @twilio.nil? %>
    "twilio_account_sid": "<%= @twilio['account_sid'] %>",
    "twilio_auth_token": "<%= @twilio['auth_token'] %>",
    "twilio_from": "<%= @twilio['from'] %>",
    <% end %>
    <% unless node[:raven][:uri].nil? %>
    "raven": "<%= node[:raven][:uri] %>",
    <% end %>
    "smtp": <%= @smtp.to_json %>,
    "email_from": "<%= @email_from %>",
    "company" : "<%= @company %>",
    "email_support" : "<%= @email_support %>",
    "signature" : "<%= @signature %>"
}
