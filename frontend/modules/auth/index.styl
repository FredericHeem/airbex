    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;

.is-area-verifyphone
.is-area-norwaydeposit
.is-area-cip
    footer, .top
        display none

.auth-footer
    position: absolute
    margin-top: 50px
    left: 0
    right: 0
    text-align: center
    padding-bottom: 25px