#area > .auth-login,
#area > .auth-register
    max-width: 550px
    padding: 19px 29px 29px 100px
    margin: 40px auto 20px
    border: 1px solid #e5e5e5
    border-radius: 5px
    box-shadow: 0 1px 2px rgba(0,0,0,.05)
    background-color #fff

    @media (max-width: 500px)
        border-radius: 0
        padding: 20px
        border: 0
        margin: 0

    input[type="text"], 
    input[type="email"], 
    input[type="password"]
        max-width 300px
        @media (max-width: 500px)
            max-width 100%

#area > .auth-login

    .help-block
        max-width 220px
        font-size 90%
        margin-bottom 11px
        visibility hidden

    .email .help-block
        visibility visible

    .otp
        states wrong, invalid, locked-out

#area > .auth-register
    states submitted

    .submitted
        max-width 30em

    .register-form
        margin-bottom: 15px

        .terms label
            font-weight normal

        label
            font-weight bold

        h3
            margin-bottom 20px

        .form-group
            margin-bottom: 0

    .help-block
        max-width 220px
        font-size 90%
        margin-top 0
        visibility hidden

    .email .help-block
        visibility visible

    .existing-container
        padding-top 1em

    .existing
        position relative
        top -15px

#area > .auth-verifyphone
    states texted slow voice phone-verified

    form
        states loading

    .phone
        .number
            states locked-out

    .verify
        .code
            states wrong

#area > .auth-resetpassword
    .phone, .end
        display none

#area > .auth-norwaydeposit
    states finished

    .payment-details
        font-size 1.4em

        .row
            margin-top 2em

#area > .auth-cip
    states finished

