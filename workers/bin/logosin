var config = require('konfu')
, Bitcoin = require('bitcoin').Client
, db = require('../lib/db')(config.pg_url, config.pg_native)

require('../logosin')({
    daemon: new Bitcoin({
        host: config.lgs_host,
        port: config.lgs_port,
        user: config.lgs_user,
        pass: config.lgs_pass,
        ssl: config.lgs_ssl || false
    }),
    db: db,
    start: true,
    minConf: config.lgs_minconf
})
