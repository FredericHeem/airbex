check process <%= @deamonName %>
    with pidfile /var/run/<%= @deamonName %>.pid
    start program = "/sbin/start <%= @deamonName %>"
    stop program  = "/sbin/stop <%= @deamonName %>"
    if failed port <%= @port %> type tcp
        with timeout 600 seconds
        40 times within 40 cycles
        then alert
    if failed port <%= @port %> type tcp
        with timeout 600 seconds
        40 times within 40 cycles
        then restart
