{
    "type": "object",
    "properties": {
        "market": {
            "type": "string",
            "required": true,
            "pattern": "^[A-Z]{6,12}$"
        },
        "amount": {
            "type": "string",
            "required": true,
            "pattern": "^\\d+(\\.\\d+)?$"
        },
        "type": {
            "type": "string",
            "required": true,
            "enum": ["bid", "ask"]
        },
        "address": {
            "type": "string",
            "required": false,
            "pattern": "^[1-9A-Za-z]{27,34}$"
        }
    }
}
