.is-section-login
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;

    > .top
        display none

    footer, hr
        display none

.container.login
    max-width: 550px
    padding: 19px 0px 29px 100px
    margin: 40px auto 20px
    border: 1px solid #e5e5e5
    border-radius: 5px
    box-shadow: 0 1px 2px rgba(0,0,0,.05)
    background-color #fff

    .register-form
        button
            width 300px

        input
            width 285px

        label
            font-weight bold

        h3
            margin-bottom 20px

    .help-inline
        max-width 220px
        font-size 90%
        margin-bottom 11px
        visibility hidden

    .email .help-inline
        visibility visible
