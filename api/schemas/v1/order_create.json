{
    "type": "object",
    "properties": {
        "market": {
            "type": "string",
            "required": true,
            "pattern": "^[A-Z]{6,12}$"
        },
        "price": {
            "type": ["string", "null"],
            "required": true
        },
        "amount": {
            "type": "string",
            "required": true,
            "pattern": "^\\d+(\\.\\d+)?$"
        },
        "type": {
            "type": "string",
            "required": true,
            "enum": ["bid", "ask"]
        },
        "aon": {
            "type": "boolean",
            "required": false
        }
    }
}
